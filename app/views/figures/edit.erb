<h2>Edits for <%= @figure.name %></h2>

  <form action="/figures/<%= @figure.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Figure's Name:</label>
    <br>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

    <br>
    <p>Select an existing title or create a new one below.</p>


    <h3>Titles:</h3>
    <% @titles.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" id="<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %><br>
    <% end %>
    <br>

    <h3>Create New Title:</h3>
    <input type="text" name="title[name]" id="new_title">
    <br><br>

    <p>Select an existing Landmark or create a new one below.</p>
    <h3>Landmarks:</h3>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br>
    <% end %>
    <br>

  <h3>Create New Landmark:</h3>
  <label for="new_landmark">Name: </label>
  <input id="new_landmark" type="text" name="landmark[name]">
  <label for="landmark_year">Year Completed:</label>
  <input id="landmark_year" type="number" name="landmark[year_completed]">
  <br><br>

    <input type="submit" id="Edit Figure" value="Edit Figure">
  </form>