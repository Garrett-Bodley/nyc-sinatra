<h1>Create a new figure:</h1>

<form method="POST" action="/figures">
  <label for="figure_name">Figure Name:</label><br>
  <input id="figure_name" type="text" name="figure[name]">

  <h3>Titles:</h3>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>
  <%end%>
  <br>
  <h3>Create New Title:</h3>
  <input id="new_title" type="text" name="title[name]">
  <br>

  <h3>Landmarks:</h3>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%><br>
  <%end%>
  <h3>Create New Landmark:</h3>
  <label for="new_landmark">Name: </label>
  <input id="new_landmark" type="text" name="landmark[name]">
  <label for="landmark_year">Year Completed:</label>
  <input id="landmark_year" type="number" name="landmark[year_completed]">
  <br>
  <br>

  <input id="submit" type="submit" value="Create New Figure">
  <br>
  <br>

</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>