<h1><%=@figure.name%></h1>
<h4>Titles:</h4>
<ul>
  <%@figure.titles.each do |title|%>
    <li><%=title.name%></li>
  <%end%>
</ul>
<h4>Landmarks:</h4>
<ul>
  <%@figure.landmarks.each do |title|%>
    <li><%=title.name%></li>
  <%end%>
</ul>
<br>
<br>
<form method="POST" action="/figures/<%=@figure.id%>">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input id="delete" type="submit" value="Delete">
</form>